@{
    ViewBag.Title = "Program Head Dashboard";
    Layout = "~/Views/Shared/AdminHeader.cshtml";
}
@section Styles {
    <style>
        .content-section {
            padding: 30px;
            flex-grow: 1;
        }

        .dashboard-card {
            background-color: white;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
            margin-bottom: 20px;
            height: 100%;
            transition: transform 0.3s ease;
        }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .dashboard-card h4 {
            color: #273F4F;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .dashboard-card p {
            color: #555;
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #273F4F;
            border-color: #273F4F;
        }

        .btn-primary:hover {
            background-color: #1a2b38;
            border-color: #1a2b38;
        }
    </style>
}
<div class="container content-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Student & Class Management</h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="dashboard-card">
                <h4>Student Management</h4>
                <p>Review and approve pending student enrollments and manage student records.</p>
                <a href="@Url.Action("Students", "CourseManagement")" class="btn btn-primary">Manage Students</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="dashboard-card">
                <h4>Class Management</h4>
                <p>Manage and set course schedules for your program.</p>
                <a href="@Url.Action("ClassManagement", "CourseManagement")" class="btn btn-primary">Manage Classes</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
}
