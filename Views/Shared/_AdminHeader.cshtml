<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet">

    <!-- Optional Styles Section -->
    @RenderSection("Styles", required: false)
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="@Url.Action("MainAdmin", "Admin")">Admin Panel</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAdmin"
                aria-controls="navbarNavAdmin" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavAdmin">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")"
                       aria-current="page"
                       href="@Url.Action("MainAdmin", "Admin")">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Curriculum" ? "active" : "")"
                       href="@Url.Action("Admin_Curriculum", "Admin")">Curriculums</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Courses" ? "active" : "")"
                       href="@Url.Action("Admin_Course", "Admin")">Courses</a>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Set Schedules", "Admin_Schedule", "Admin", null, new {
                        @class = "nav-link " + (ViewContext.RouteData.Values["Action"]?.ToString() == "Set Schedules" ? "active" : "")
                    })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Enrollment Approval", "EnrollmentApproval", "Admin", null, new {
                        @class = "nav-link " + (ViewContext.RouteData.Values["Action"]?.ToString() == "Enrollment Approval" ? "active" : "")
                    })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Admin Controls", "AdminControl", "Admin", null, new {
                        @class = "nav-link " + (ViewContext.RouteData.Values["Action"]?.ToString() == "Admin Controls" ? "active" : "")
                    })
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("LoginFaculty", "Auth")">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Main Content -->
<div class="container mt-4">
    @RenderBody()
</div>

<!-- Bootstrap JS + Optional Scripts Section -->
<script src="~/Content/bootstrap-grid.min.css"></script>
@RenderSection("Scripts", required: false)

</body>
</html>