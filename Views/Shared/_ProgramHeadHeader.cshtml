@{
    ViewBag.Title = ViewBag.Title ?? "Program Head";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Program Head Panel</title>

    <!-- CSS Bundles -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
    <div class="container">
        @Html.ActionLink("Program Head Panel", "Dashboard", "ProgramHead", null, new { @class = "navbar-brand" })

        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    @Html.ActionLink("Dashboard", "Dashboard", "ProgramHead", null, new {
                        @class = "nav-link " + (ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")
                    })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Students", "Students", "ProgramHead", null, new {
                        @class = "nav-link " + (ViewContext.RouteData.Values["Action"]?.ToString() == "Students" ? "active" : "")
                    })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Approve Enrollment", "Approval", "ProgramHead", null, new {
                        @class = "nav-link " + (ViewContext.RouteData.Values["Action"]?.ToString() == "Approve Enrollment" ? "active" : "")
                    })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Set Schedules", "index", "Schedule", null, new {
                        @class = "nav-link " + (ViewContext.RouteData.Values["Action"]?.ToString() == "Set Schedules" ? "active" : "")
                    })
                </li>
            </ul>

            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Logout", "LoginFaculty", "Auth", null, new {
                        @class = "nav-link"
                    })
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Program Head Dashboard</p>
    </footer>
</div>

<!-- JS Bundles -->
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<!-- Optional Scripts Section -->
@RenderSection("scripts", required: false)
</body>
</html>